<div class="form-container">
    <form action="/api/sessions/registro" method='post' class="form">
        <h2>Formulario de Registro</h2>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="first_name" required>

        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" name="last_name" required>

        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="age" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Contrase√±a:</label>
        <input type="password" id="password" name="password" required>
        <label for="role">Rol:</label>
        <select name="role" id="role">
            <option value="user">Usuario</option>
            <option value="admin">Administrador</option>
        </select>

        <button type="submit" value="Registrar" id="submit">Enviar</button>
    </form>
</div>